# Auto detect text files and perform LF normalization
* text=auto

# Windows script files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# NSIS scripts
*.nsi text eol=crlf
*.nsh text eol=crlf

# Configuration files
*.ini text eol=crlf
*.cfg text eol=crlf

# Binary files
*.exe binary
*.dll binary
*.ico binary
*.bmp binary
*.gif binary
*.png binary
*.jpg binary
*.ttf binary
